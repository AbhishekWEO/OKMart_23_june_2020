<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/circle_solid_primary_dark">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/tv_heading"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_product_details">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="How was your bidding experience?"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_smileys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_heading"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:weightSum="5">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/feedback1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/feedbacks1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Terrible"
                        android:id="@+id/tv_terrible"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/feedback2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/feedbacks2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Bad"
                        android:id="@+id/tv_bad"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/feedback3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/feedbacks3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Satisfactory"
                        android:id="@+id/tv_satisfactory"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/feedback4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/feedbacks4"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Great"
                        android:id="@+id/tv_great"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/feedback5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/feedbacks5"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Wonderful"
                        android:id="@+id/tv_wonderful"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_smileys">


                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="SUBMIT"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="@color/white"/>

                <ProgressBar
                    android:id="@+id/progressBarSubmit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    style="?android:attr/progressBarStyle"
                    android:visibility="gone"
                    android:indeterminateTint="@color/white"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <!--<TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_smileys"
                android:padding="10dp"
                android:text="SUBMIT"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="@color/white"/>-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>