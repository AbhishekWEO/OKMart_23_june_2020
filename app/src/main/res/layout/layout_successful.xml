<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27-10-2019 12:10"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_thumbnail"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_img"
            android:layout_width="90dp"
            android:layout_height="90dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="Apple Iphones XS 64GB"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/rm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/product_name"
                android:text="Successful Offer"
                android:textColor="@color/green"
                android:textSize="11dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_bid_price"
                android:weightSum="3"
                android:layout_below="@+id/rm">

                <TextView
                    android:id="@+id/bid_price"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:text="RM 1699.00"
                    android:textColor="@color/green"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/ic_share"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_share"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/ll_bid_price">

                <TextView
                    android:id="@+id/current_price"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="RM 1859.00"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/actual_price"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="RM 3000.00"
                    android:textSize="12dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/progress"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:text=""
                        android:textSize="12dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/deliver_now"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:background="@drawable/rounded_solid_green"
                        android:gravity="center"
                        android:text="Deliver Now"
                        android:textSize="12dp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shipping_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/delivery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="The parcel is ready to ship"
                android:textColor="@color/black"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:rotation="90"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right"/>

            <ImageView
                android:id="@+id/less"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:rotation="270"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/address_details"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Delivery Information"
                android:textColor="@color/black"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Michael"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/address_line_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. 23 A, Bandar Sugai"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/address_line_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="43200, Cheras, Selangor"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="144001"
                    android:textSize="13dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+60 987453 23987"
                android:textSize="13dp"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_divider"
        android:background="@color/mediumGrey"/>

</LinearLayout>